<Application x:Class="DimplomStandart.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DimplomStandart"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="DefaultStyle" TargetType="{x:Type FrameworkElement}">
            <Setter Property="Control.FontFamily" Value="Cascadia Code" />
            <Setter Property="Control.FontSize" Value="18" />
        </Style>
        <Style x:Key="GridStyle" TargetType="{x:Type FrameworkElement}">
            <Setter Property="Control.Background" Value="#FFBAC293"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource DefaultStyle}"/>
        <Style TargetType="Button" BasedOn="{StaticResource DefaultStyle}"/>
        <Style TargetType="Label" BasedOn="{StaticResource DefaultStyle}"/>
        <Style TargetType="ComboBox" BasedOn="{StaticResource DefaultStyle}"/>
        <Style TargetType="TextBlock" BasedOn="{StaticResource DefaultStyle}"/>
        <Style TargetType="DataGrid" BasedOn="{StaticResource DefaultStyle}"/>

    </Application.Resources>
</Application>
