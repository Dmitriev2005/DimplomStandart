<Window x:Class="DimplomStandart.Windows.DataReference.CodeCountryWindows.AddEditCodeCountry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimplomStandart.Windows.DataReference.CodeCountryWindows"
        mc:Ignorable="d"
        Title="Добавить/изменить код страны" Height="200" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <StackPanel>
                <Label Content="Наименование"/>
                <TextBox Text="{Binding Name}"/>
                <Label Content="Код"/>
                <TextBox Text="{Binding Code}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="btnSave" Click="btnSave_Click" Content="Сохранить" Margin="0,0,20,0"/>
                <Button x:Name="btnCancel" Click="btnCancel_Click" Content="Отменить"/>
            </StackPanel>
            

        </StackPanel>
    </Grid>
</Window>
